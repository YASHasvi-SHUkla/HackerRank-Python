def is_leap(year):
    
    leap = False
    if year%100 == 0:
        if year%400 ==0:
            return True
        else:
            return leap
    else:
            if year%4==0:
                return True
            else:
                return leap
    
year = int(raw_input())
print is_leap(year)

  # first we check if the year is century year for that we divide (modulus) the year by 100 , then by 400 for checking it's Leap year or not.
    # for checking normal years, we divide (modulus) the year by 4 
